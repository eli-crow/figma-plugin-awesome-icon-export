{
    "compilerOptions": {
        "resolveJsonModule": true,
        "target": "es6",
        "lib": [
            "DOM",
            "ES2020",
            "ESNext.String"
        ],
        "typeRoots": [
            "./node_modules/@types",
            "./node_modules/@figma"
        ],
        "baseUrl": "server",
        "moduleResolution": "Node",
        "allowSyntheticDefaultImports": true,
        "jsx": "react"
    },
    "watchOptions": {
        "watchFile": "useFsEvents",
        "watchDirectory": "useFsEvents",
        "fallbackPolling": "dynamicPriority",
        "synchronousWatchDirectory": true,
        "excludeDirectories": [
            "**/node_modules",
            "_build",
            "dist"
        ]
    }
}